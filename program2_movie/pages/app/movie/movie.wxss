/* pages/app/movie/movie.wxss */
.container{
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  margin: 0;
  padding: 0;
  background: #fafafa
}

.content {
  flex: 1;
  width: 100%;
}

.top-tab {
  background-color: #fff;
  flex: 1;
  display: flex;
  position: fixed;
  left: 0;
  bottom: 10;
  flex-direction: row;
  width: 100%;
  height: 120rpx;
}

.tab-item {
  display: flex;
  flex-direction: column;
  width: 50%;
  height: 100%;
  justify-content: center;
  align-items: center;
  border-top: 2rpx solid #a7a7a8;
  flex: 1;
}

.active {
  color: red;

}

.item-text {
  font-size: 26rpx;
}
