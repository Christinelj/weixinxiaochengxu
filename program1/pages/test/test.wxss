/* pages/test/test.wxss */

.container {
  background-color: #3c6;
  height: 100vh;
}

.whiteBackground {
  display: flex;
  flex-direction: column;
  justify-items: center;
  margin-top: 80rpx;
  background-color: rgb(255, 255, 255);
  padding-bottom: 20rpx;
}

.button_title {
  font-size: 14px;
  background-color: rgb(255, 255, 255);
}

.button_title::after {
  border: 0;
}

.pictureCat {
  width: 550rpx;
  height: 500rpx;
}

.button_explain {
  font-size: 10px;
  background-color: rgb(255, 255, 255);
  color: #3c6;
}

.button_explain::after {
  border: 0;
}

.price {
  font-size: 30pt;
  text-align: center;
}

.unit {
  text-align: center;
  font-size: 8pt;
  color: gray;
}

.button_morevalue {
  margin-top: 30rpx;
  margin-bottom: 30rpx;
  background-color: green;
  color: white;
  border-radius: 45rpx;
}

.bottomBackground {
  position: fixed;
  display: flex;
  flex-direction: row;
  justify-items: space-between;
  align-items: center;
  align-content: space-around;
  width: 100%;
  background-color: white;
  padding-top: 40rpx;
  padding-bottom: 40rpx;
  bottom: 0;
}

.step {
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-items: space-between;
  justify-content: center;
  align-items: center;
  width: 40%;
  border: solid 1px gray;
  border-radius: 5px;
  margin-left: 40rpx;
}

.minus {
  background-color: white;
}

.minus::after {
  border: 0;
}

.count {
  font-size: 12pt;
}

.plus {
  background-color: white;
}

.plus::after {
  border: 0;
}

.button_pay {
  background-color: #3c6;
  width: 40%;
}
